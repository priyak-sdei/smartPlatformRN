{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["shared/*"],
      "@theme/*": ["src/theme/*"],
      "@pods/*": ["pods/*"],
      "@screens/*": ["src/screens/*"],
      "@types/*": ["src/types/*"],
      "@i18n/*": ["src/i18n/*"],
      "@ui/*": ["shared/ui/*"],
      "@navigation/*": ["src/navigation/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@redux/*": ["src/redux/*"],
      "@constants/*": ["src/constants/*"]
    }
    // ...other options
  }
}

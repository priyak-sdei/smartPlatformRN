{
  "name": "smartplatformrn",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "start:dev": "ENVFILE=.env.dev react-native start --reset-cache",
    "start:staging": "ENVFILE=.env.staging react-native start --reset-cache",
    "start:prod": "ENVFILE=.env react-native start --reset-cache",
    "rename-app": "read -p 'Enter New App Name: ' newName && read -p 'Enter New Bundle ID (e.g., com.example.app): ' newBundleId && npx react-native-rename \"$newName\" -b \"$newBundleId\"",
    "assets:set-icon": "npx react-native set-icon --path smart-assets/icon.png --platform android && npx react-native set-icon --path smart-assets/icon.png --platform ios",
    "postassets:set-icon": "echo 'App icons generated. Remember to clean builds (./android/gradlew clean, rm -rf ios/build) and reinstall pods (cd ios && pod install --repo-update) before rebuilding.'",
    "assets:generate-splash": "node ./scripts/generate-splash.js",
    "customize-app": "yarn assets:set-icon && yarn assets:generate-splash && echo 'App customization complete! Clean builds and reinstall pods.'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@react-native/new-app-screen": "0.80.0",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/react-native": "^13.2.0",
    "add": "^2.0.6",
    "i18next": "^25.2.1",
    "react": "19.1.0",
    "react-i18next": "^15.5.3",
    "react-native": "0.80.0",
    "react-native-app-intro-slider": "^4.0.4",
    "react-native-gesture-handler": "^2.26.0",
    "react-native-localize": "^3.4.2",
    "react-native-reanimated": "^3.18.0",
    "react-native-rename": "^3.2.16",
    "react-native-safe-area-context": "^5.5.0",
    "react-native-screens": "^4.11.1",
    "react-native-svg": "^15.12.0",
    "react-redux": "^9.2.0",
    "redux-logger": "^3.0.6",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@bam.tech/react-native-make": "^3.0.3",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.0",
    "@react-native/eslint-config": "0.80.0",
    "@react-native/metro-config": "0.80.0",
    "@react-native/typescript-config": "0.80.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@types/redux-logger": "^3.0.13",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.19.0",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "lint-staged": "^16.1.2",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "2.8.8",
    "react-native-bootsplash": "^6.3.10",
    "react-native-dotenv": "^3.4.11",
    "react-native-svg-transformer": "^1.5.1",
    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}

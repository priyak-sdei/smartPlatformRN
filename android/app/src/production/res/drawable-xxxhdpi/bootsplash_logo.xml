<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" />
        </shape>
    </item>
    
    <!-- Logo -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#64B5F6" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>
    
    <!-- App Name Text -->
    <item android:gravity="center_horizontal|bottom" android:bottom="100dp">
        <text android:text="SmartPlatform" 
              android:textColor="#FFFFFF"
              android:textSize="24sp"
              android:textStyle="bold" />
    </item>
    
    <!-- Environment Badge -->
    <item android:gravity="top|end" android:top="50dp" android:right="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#64B5F6" />
            <corners android:radius="8dp" />
            <padding android:left="12dp" android:right="12dp" android:top="6dp" android:bottom="6dp" />
        </shape>
    </item>
</layer-list>